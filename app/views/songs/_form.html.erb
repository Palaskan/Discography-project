<%= form_with(model: song) do |form| %>
  <% if song.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
        <% song.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div>
    <%= form.label :lp_id, "Select LP", style: "display: block" %>
    <%= form.collection_select :lp_id, @lps, :id, :name, {}, { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :authors, style: "display: block" %>
    <%= form.collection_select :author_ids, @authors, :id, :name, {},
                                { multiple: true, class: "form-control select2" } %>
  </div>

  <br>

  <div>
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>

<p style="color: green"><%= notice %></p>

<h1>Songs</h1>

<div id="songs">

  <%= link_to "New song", new_song_path, class: 'btn btn-success' %>
  <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        <% @songs.each do |song| %>
            <tr>
                <td><%= song.name %></td>
                <td><%= song.description %></td>
                <td><%= link_to "Show", song, class: 'btn btn-primary' %> <%= link_to 'Edit', edit_song_path(song), class: "btn btn-warning" %> <%= link_to 'Delete', song_path(song),
                method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>



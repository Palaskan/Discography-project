<%= form_with(model: lp) do |form| %>
  <% if lp.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(lp.errors.count, "error") %> prohibited this lp from being saved:</h2>

      <ul>
        <% lp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  
  <div>
    <%= form.label :artist_id, "Select Artist", style: "display: block" %>
    <%= form.collection_select :artist_id, @artists, :id, :name, {}, { class: "form-control" } %>
  </div>

  <br>
  
  <div>
    <%= form.submit "Submit", class: "btn btn-success" %>
  </div>
<% end %>

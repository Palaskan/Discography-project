<p style="color: green"><%= notice %></p>

<h1>Artists</h1>

<div id="artists">
  <%= link_to "New artist", new_artist_path, class: 'btn btn-success' %>
  <table class="table table-striped">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th></th>
        </tr>
    </thead>
    <tbody>
        <% @artists.each do |artist| %>
            <tr>
                <td><%= artist.name %></td>
                <td><%= artist.description %></td>
                <td><%= link_to "Show", artist, class: "btn btn-primary" %> <%= link_to 'Edit', edit_artist_path(artist), class: "btn btn-warning" %> <%= link_to 'Delete', artist_path(artist),
                method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %></td>
            </tr>
        <% end %>
    </tbody>
  </table>
</div>

